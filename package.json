{
	"name": "remote-mcp-server-authless",
	"version": "0.1.0",
	"description": "Remote MCP server that dynamically loads and serves FlowMCP schemas as tools via Cloudflare Workers",
	"private": true,
	"scripts": {
		"deploy": "wrangler deploy",
		"dev": "wrangler dev",
		"format": "biome format --write",
		"lint:fix": "biome lint --fix",
		"start": "wrangler dev",
		"cf-typegen": "wrangler types",
		"type-check": "tsc --noEmit",
		"test": "vitest",
		"test:coverage:src": "vitest run --coverage --coverage.include='src/**'",
		"test:watch": "vitest watch"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "1.18.0",
		"agents": "^0.1.3",
		"flowmcp": "github:flowmcp/flowmcp#91ccaf8dc7b61b5df3cfa780699cbf4973cd3cbd",
		"hono": "^4.9.8",
		"schemaimporter": "github:flowmcp/flowMCP-schemas#ab016a10b7986109d782bcb6056d781576ddc152",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"typescript": "5.9.2",
		"vitest": "^3.2.4",
		"wrangler": "^4.36.0"
	}
}
